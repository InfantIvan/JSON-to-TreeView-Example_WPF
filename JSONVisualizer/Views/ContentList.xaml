                    <GridViewColumn Header="Main" Width="100" DisplayMemberBinding="{Binding main}" />
                    <GridViewColumn Header="Sub"  Width="100" DisplayMemberBinding="{Binding sub}" />
                    <GridViewColumn Header="Comment" Width="100" DisplayMemberBinding="{Binding comment}" />
                </GridView>
            </ListView.View>
        </ListView>
-->
