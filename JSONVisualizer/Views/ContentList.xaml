            <DataGrid.ItemContainerStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property=" Value="{Binding TableClickCommand}"></Setter>
                </Style>
            </DataGrid.ItemContainerStyle>
        <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding SelectCommand}"
                                           CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </DataGrid> -->
        <TreeView Margin="36,46,42,19" Grid.ColumnSpan="2" ItemsSource="{Binding TreeItems}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <!--<TextBlock Text="{Binding Name}"+ " - " + " {Binding Value}" />-->
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} : {1}">
                                <Binding Path="Name" />
                                <Binding Path="Value" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Button Content="Open" HorizontalAlignment="Right" Margin="0,10,154,0" VerticalAlignment="Top" Width="75" Command="{Binding FileOpenCommand}" />
    </Grid>
</UserControl>